<root>
  <styles>
    <include src="file://{resources}/styles/custom_game/end_screen.css" />
  </styles>
  <scripts>
    <include src="file://{resources}/scripts/end_screen/end_screen_player.js" /> 
  </scripts>
	<Panel class="EndScreenPlayerRoot" hittest="false">	
		<Panel id="PlayerDetails" >
			<DOTAAvatarImage id="PlayerAvatar" />
			<DOTAUserName id="PlayerName" />
		</Panel>
		<Panel id="PlayerColumnStats">
			<Panel id="OverviewHeaders" class="ColumnHeader">
				<Panel class="PlayerColumns">
					<Label id="UnitScore" text="undefined" class="ColumnText" />
				</Panel>
				<Panel class="PlayerColumns">
					<Label id="HeroScore" text="undefined" class="ColumnText" />
				</Panel>
				<Panel class="PlayerColumns">
					<Label id="ResourceScore" text="undefined" class="ColumnText" />
				</Panel>
				<Panel class="PlayerColumns">
					<Label id="TotalScore" text="undefined" class="ColumnText" />
				</Panel>
			</Panel>
			<Panel id="UnitsHeaders" class="ColumnHeader" >
				<Panel class="PlayerColumns">
					<Label id="UnitsProduced" text="undefined" class="ColumnText" />
				</Panel>
				<Panel class="PlayerColumns">
					<Label id="UnitsKilled" text="undefined" class="ColumnText" />
				</Panel>
				<Panel class="PlayerColumns">
					<Label id="BuildingsProduced" text="undefined" class="ColumnText" />
				</Panel>
				<Panel class="PlayerColumns">
					<Label id="BuildingsRazed" text="undefined" class="ColumnText" />
				</Panel>
				<Panel class="PlayerColumns">
					<Label id="LargestArmy" text="undefined" class="ColumnText" />
				</Panel> 
			</Panel>

			<Panel id="HeroesHeaders" class="ColumnHeader" >
				<Panel class="PlayerColumns">
					<DOTAHeroImage id="1" class="MiniHeroPanel" />
					<DOTAHeroImage id="2" class="MiniHeroPanel" />
					<DOTAHeroImage id="3" class="MiniHeroPanel" />
				</Panel>
				<Panel class="PlayerColumns">
					<Label id="HeroesKilled" text="undefined" class="ColumnText" />
				</Panel>
				<Panel class="PlayerColumns">
					<Label id="ItemsObtained" text="undefined" class="ColumnText" />
				</Panel>
				<Panel class="PlayerColumns">
					<Label id="MercenariesHired" text="undefined" class="ColumnText" />
				</Panel>
				<Panel class="PlayerColumns">
					<Label id="ExperiencedGained" text="undefined" class="ColumnText" />
				</Panel>
			</Panel>

			<Panel id="ResourcesHeaders" class="ColumnHeader" >
				<Panel class="PlayerColumns">
					<Label id="GoldMined" text="undefined" class="ColumnText" />
				</Panel>
				<Panel class="PlayerColumns">
					<Label id="LumberHarvested" text="undefined" class="ColumnText" />
				</Panel>
				<Panel class="PlayerColumns">
					<Label id="ResourceTraded" text="undefined" class="ColumnText" />
				</Panel>
				<Panel class="PlayerColumns">
					<Label id="TechPercentage" text="undefined" class="ColumnText" />
				</Panel>
				<Panel class="PlayerColumns">
					<Label id="GoldLostToUpkeep" text="undefined" class="ColumnText" />
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>