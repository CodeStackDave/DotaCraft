<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/pre_game_selection.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/team_selection/dotacraft_player.js" />
	</scripts>
	<Panel class="Player">
		<DOTAAvatarImage id="PlayerAvatar" />
		<DOTAUserName id="PlayerName" />
	<DropDown id="TeamDropDown" oninputsubmit="PlayerTeamChanged()">
		<Label text="Team 1" id="2" />
		<Label text="Team 2" id="3" />
		<Label text="Team 3" id="6" /> 
		<Label text="Team 4" id="7" />
		<Label text="Team 5" id="8" />
		<Label text="Team 6" id="9" />
	</DropDown>

	<DropDown id="RaceDropDown" oninputsubmit="PlayerRaceChanged()">
	`	<Label text="Random" 	id="0" />
		<Label text="Human" 	id="1" />
		<Label text="Orc" 		id="2" />
		<Label text="Night Elf" id="3" />
		<Label text="Undead" 	id="4" />
	</DropDown>		
		
	<DropDown id="ColorDropDown" oninputsubmit="PlayerColorChanged()">
		<Label text="1" id="color_0" />
		<Label text="2" id="color_1" />
		<Label text="3" id="color_2" />
		<Label text="4" id="color_3" />
		<Label text="5" id="color_4" />
		<Label text="6" id="color_5" />
		<Label text="7" id="color_6" />
		<Label text="8" id="color_7" />
		<Label text="9" id="color_8" />
		<Label text="10" id="color_9" />
	</DropDown>
	
	<Button id="HudButton" onactivate="ReadyUp()">
		<Label id="PlayerScoreButtonLabel" text="Ready" />
	</Button>
		
	</Panel>
</root>